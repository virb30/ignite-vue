{
  "compilerOptions": {                      
    "target": "esnext",                                
    "module": "esnext",  
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "jsx": "preserve",                                                       
    "allowJs": true,                                                   
    "noEmit": true,                                                
    "strict": true,                                    
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "isolatedModules": true,                                            
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                                  
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },     
  },
  "include": ["src"]
}
